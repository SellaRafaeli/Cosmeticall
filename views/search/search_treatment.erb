<div class='page1container '>


  <%= erb :"search/buttons_bar", locals: locals %>
  <div id="search" class='page1 effect2' style="">


    <h2><%= t(:search_header) %></h2>
    <p style='max-width: 400px'><%= t('search_explain') %></p>


    <%= erb :"users/treatments", locals: {allow_any: true} %>
    <%= erb :"users/areas" %>

    <div class='input-group'>
      <label for='search_name_input' class='control-label '><%= t('name') %></label>
      <input type="text" name='name' id="search_name_input" class='form-control' placeholder='<%= t('name_placeholder') %>'>
    </div>

    <div class="checkbox checkbox-danger ltr">
      <div class="mr25 inline-block"><%= t(:home_visits) %></div>
      <input name="home_visits" type="checkbox" id="search_home_visits_input">
      <label for="search_home_visits_input">
      </label>
    </div>


