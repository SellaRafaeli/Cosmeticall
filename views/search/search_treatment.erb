    <div class="input-group checkbox">
      <input name="home_visits" id="search_home_visits_input" type="checkbox">
      <label for="search_home_visits_input"><%= t(:home_visits) %></label>
    </div>
-->

    <button class='btn btn-lg btn-raised cos-red-btn float-left' type='button' value='Submit form' onClick='submitDetailsForm()'>
      <i class="fa fa-search ml5" aria-hidden="true"></i>
      <%= t(:search) %>
    </button>

  </div> <!-- end of search -->
</div> <!-- end of page1container -->
