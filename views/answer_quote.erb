<form class='form-group' action='/answer_quote' method='post'>

	<input type="hidden" name='quote_id' value="<%=params[:_id]%>" class='form-control' >


	<label>Your phone</label>
	<img src="/img/il.png">

	<% if cu %>
	<%= current_user["phone"]%>
	<% else %>

	<div class='input-group'>
		<input type="text" name='phone' class="form-control bfh-phone" zdata-format="972 (ddd) ddd-dddd" required placeholder='052-123-4567'>
	</div>
	<% end %>

	<p>
		<div class='input-group'>
			<label>Price</label>
			<input type="number" name='price' class="form-control"  placeholder="Enter your price in shekels" data-format="ddd" required >
		</div>
	</p>

	<p>
		<div class='input-group'>
			<label>Message</label>
			<textarea rows="9" cols="20" name='description' class='form-control' placeholder="Enter your message"  required ></textarea>
		</div>
	</p>

	<p>
		<button class='btn btn-lg btn-raised btn-custom-darken' type='submit'>Send &nbsp; â†’</button>
	</p>

</form>
</div>
