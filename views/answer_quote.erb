<% if cu %>
<%  current_user = cu %>
<%   else %>
<%  current_user = {} %>
<% end %>



<div class='page1' style='background-color: #dbe9d8' >

	<div id="">

		<p>
			<h3 style="font-family: verdana;"><%=locals[:text]%></h1>
			</p>

			<p>
				<h1 style="font-family: verdana;">Answer quote</h1>
			</p>

