
<%= erb :"/header/header", locals: {header:"Sign up"} %>

<%
val = {}
use_default_vals = !$prod
if use_default_vals
  val = {
    name: 'Some value',
    num: rand(1000000).to_i
  }
end
%>
<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>

<p>
  <h1 style="font-family: verdana; color: #b3b3ff;">Sign up</h1> 
</p>
<form class='form-group' action='/create_user' method='post'>

  <p>
    <div class='input-group'>
      <label>Name</label>
      <input type="text" name='name' class='form-control' placeholder="Name" required value='<%=val[:name]%>'>
    </div>
  </p>

  <label>Phone</label>

  <p>
    <div class="input-group phone-control" style = "width: 600px;">
      <select class="form-control" name='code' style = "width: 90px; border-radius: 4px; margin-right: 10px;" >
        <option value = "052">052</option>
        <option value = "054">054</option>
        <option value = "058">058</option>
      </select>
      <input type=tel size=10 name="phone_without_code"  style = "width: 120px;"class='form-control' placeholder="123-4567" required value='<%=val[:num]%>'>
    </div>
  </p>

  <p>
    <div class="input-group">
      <label>Profession</label>
      <select class="form-control" name='profession'>
        <option value = "Beautician">Beautician</option>
        <option value ="Cosmetician">Cosmetician</option>
        <option value ="Doctor">Doctor</option>
      </select>
    </div>
  </p>


  <p>
    <div class='input-group'>
      <label>Address</label>
      <input type="text" name='address' class='form-control' placeholder="Address" required>
    </div>
  </p>

  <p>
    <div class="input-group">
      <label>City</label>
      <select class="form-control" name='city'>
        <option value = "Tel Aviv">Tel Aviv</option>
        <option value = "Haifa">Haifa</option>
        <option value = "Ashdod">Ashdod</option>
      </select>
    </div>
  </p>

  <p>
    <div class='input-group'>
      <label>Description</label>
      <textarea rows="9" cols="20" name='description' class='form-control' placeholder="Enter your text here" required></textarea>
    </div>
  </p>

  <div class="input-group">
    <label>Treatments</label>
    <div class="checkbox">
      <label><input type="checkbox" value="Manicure" name="treatments[]">Manicure</label>
    </div>
    <div class="checkbox">
      <label><input type="checkbox" value="Pedicure" name="treatments[]">Pedicure</label>
    </div>
    <div class="checkbox">
      <label><input type="checkbox" value="Make up" name="treatments[]">Make up</label>
    </div>
  </div>

  <div class="checkbox">
    <label><input name="home_visits" type="checkbox" value="true">Home Visits</label>
  </div>


  <button class='btn btn-lg btn-raised btn-primary' type='submit'>Send</button>

</form>

</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.2/jquery.min.js"></script>
<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>


